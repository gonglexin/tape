<h1>New tape</h1>

<% form_for([:admin, @tape], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.select :category_id, Category::TYPES %>
  </p>
	<p>
     <%= f.label :photo %><br />
     <%= f.file_field :photo %>
   </p>
  <p>
    <%= f.label :memo %><br />
    <%= f.text_area :memo %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_tapes_path %>