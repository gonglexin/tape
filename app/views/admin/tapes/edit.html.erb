<h1>Editing tape</h1>

<% form_for([:admin, @tape], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
 	<p>
    <%= f.label :photo %><br />
		<% if :photo %>
			<%= image_tag(@tape.photo(:thumb), :mouseover => @tape.photo.url) %> <br /> <br />
		<% end %>
    <%= f.file_field :photo %>
   </p>
  <p>
    <%= f.label :memo %><br />
    <%= f.text_area :memo %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [:admin, @tape] %> |
<%= link_to 'Back', admin_tapes_path %>