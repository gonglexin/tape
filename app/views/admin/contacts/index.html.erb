<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Tel</th>
    <th>Fax</th>
    <th>Address</th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%=h contact.name %></td>
    <td><%=h contact.email %></td>
    <td><%=h contact.tel %></td>
    <td><%=h contact.fax %></td>
    <td><%=h contact.address %></td>
    <td><%= link_to 'Show', [:admin,contact] %></td>
    <td><%= link_to 'Edit', edit_admin_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', [:admin,contact], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New contact', new_admin_contact_path %>